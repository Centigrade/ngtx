{
  "compilerOptions": {
    "rootDir": "library",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true
  },
  "include": ["library", "library/specs", "setupAngularTestEnv.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "setupAngularTestEnv.ts",
    "library/specs",
    "library/**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
